$C.@PageOverlay {

  $C.@DecoratedContainer {
    Anchor: (Width: 480, Height: 575);

    #Title {
      Label #TitleText {
        Text: "Nickname Editor";
        Style: (FontSize: 18, TextColor: #93844c, RenderUppercase: true, RenderBold: true, HorizontalAlignment: Center);
        Anchor: (Top: 0, Left: 0, Right: 0, Bottom: 0);
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 16, Right: 16, Top: 8);

      // ===== NICKNAME =====
      Label {
        Text: %nickname.ui.nickname;
        Style: @SectionLabelStyle;
        Anchor: (Bottom: 3);
      }

      $C.@TextField #NicknameInput {
        Anchor: (Height: 30, Bottom: 6);
        Style: (FontSize: 14, TextColor: #ffffff(0.9));
      }

      // --- Separator ---
      Group { Anchor: (Height: 1, Bottom: 6); Background: #93844c(0.3); }

      // ===== TEXT STYLES =====
      Label {
        Text: %nickname.ui.textStyles;
        Style: @SectionLabelStyle;
        Anchor: (Bottom: 3);
      }

      Group {
        LayoutMode: Left;
        Anchor: (Bottom: 6);

        $C.@CheckBoxWithLabel #BoldCheckbox {
          @Text = %nickname.ui.bold;
          Anchor: (Right: 20);
        }

        $C.@CheckBoxWithLabel #ItalicCheckbox {
          @Text = %nickname.ui.italic;
          Anchor: (Right: 20);
        }

        $C.@CheckBoxWithLabel #UnderlineCheckbox {
          @Text = %nickname.ui.underline;
        }
      }

      // --- Separator ---
      Group { Anchor: (Height: 1, Bottom: 6); Background: #93844c(0.3); }

      // ===== COLOR =====
      Label {
        Text: %nickname.ui.color;
        Style: @SectionLabelStyle;
        Anchor: (Bottom: 3);
      }

      // Tab Bar
      Group #TabBar {
        LayoutMode: Left;
        Anchor: (Height: 28, Bottom: 4);

        $C.@TextButton #TabColor {
          Text: "> COLOR <";
          Anchor: (Width: 218, Height: 26);
        }

        $C.@TextButton #TabGradient {
          Text: "GRADIENT";
          Anchor: (Width: 218, Height: 26, Left: 4);
        }
      }

      // === Single Color Content ===
      Group #SingleColorSection {
        LayoutMode: Top;
        Background: #1a2a3a(0.3);
        Padding: (Left: 8, Right: 8, Top: 6, Bottom: 6);
        Anchor: (Height: 178, Bottom: 4);

        ColorPicker #ColorPicker {
          Anchor: (Height: 90, Bottom: 4);
          Style: $C.@DefaultColorPickerStyle;
        }

        // Row 1
        Group {
          LayoutMode: Left;
          Anchor: (Height: 24, Bottom: 3);

          TextButton #ColorRed { Text: %nickname.ui.red; Anchor: (Width: 106, Height: 22); Style: @RedBtnStyle; }
          TextButton #ColorOrange { Text: %nickname.ui.orange; Anchor: (Width: 106, Height: 22, Left: 3); Style: @OrangeBtnStyle; }
          TextButton #ColorYellow { Text: %nickname.ui.yellow; Anchor: (Width: 106, Height: 22, Left: 3); Style: @YellowBtnStyle; }
          TextButton #ColorGreen { Text: %nickname.ui.green; Anchor: (Width: 106, Height: 22, Left: 3); Style: @GreenBtnStyle; }
        }

        // Row 2
        Group {
          LayoutMode: Left;
          Anchor: (Height: 24, Bottom: 3);

          TextButton #ColorAqua { Text: %nickname.ui.aqua; Anchor: (Width: 106, Height: 22); Style: @AquaBtnStyle; }
          TextButton #ColorBlue { Text: %nickname.ui.blue; Anchor: (Width: 106, Height: 22, Left: 3); Style: @BlueBtnStyle; }
          TextButton #ColorPurple { Text: %nickname.ui.purple; Anchor: (Width: 106, Height: 22, Left: 3); Style: @PurpleBtnStyle; }
          TextButton #ColorPink { Text: %nickname.ui.pink; Anchor: (Width: 106, Height: 22, Left: 3); Style: @PinkBtnStyle; }
        }

        // Row 3
        Group {
          LayoutMode: Left;
          Anchor: (Height: 24);

          TextButton #ColorWhite { Text: %nickname.ui.white; Anchor: (Width: 106, Height: 22); Style: @WhiteBtnStyle; }
          TextButton #ColorGray { Text: %nickname.ui.gray; Anchor: (Width: 106, Height: 22, Left: 3); Style: @GrayBtnStyle; }
          TextButton #ColorGold { Text: %nickname.ui.gold; Anchor: (Width: 106, Height: 22, Left: 3); Style: @GoldBtnStyle; }
          TextButton #ColorNone { Text: %nickname.ui.none; Anchor: (Width: 106, Height: 22, Left: 3); Style: @NoneBtnStyle; }
        }
      }

      // === Gradient Content ===
      Group #GradientSection {
        LayoutMode: Top;
        Visible: false;
        Background: #1a2a3a(0.3);
        Padding: (Left: 8, Right: 8, Top: 6, Bottom: 6);
        Anchor: (Height: 178, Bottom: 4);

        // Two pickers
        Group {
          LayoutMode: Left;
          Anchor: (Height: 100, Bottom: 4);

          // Start
          Group {
            LayoutMode: Top;
            Anchor: (Width: 214);

            Group {
              LayoutMode: Left;
              Anchor: (Height: 14, Bottom: 2);

              Label { Text: %nickname.ui.start; Style: (FontSize: 9, TextColor: #93844c, RenderUppercase: true); }
              Group #GradColor1Preview { Anchor: (Width: 12, Height: 12, Left: 4); Background: #FF5555; }
            }

            ColorPicker #GradColorPicker1 {
              Anchor: (Height: 82);
              Style: $C.@DefaultColorPickerStyle;
            }
          }

          // End
          Group {
            LayoutMode: Top;
            Anchor: (Width: 214, Left: 6);

            Group {
              LayoutMode: Left;
              Anchor: (Height: 14, Bottom: 2);

              Label { Text: %nickname.ui.end; Style: (FontSize: 9, TextColor: #93844c, RenderUppercase: true); }
              Group #GradColor2Preview { Anchor: (Width: 12, Height: 12, Left: 4); Background: #5555FF; }
            }

            ColorPicker #GradColorPicker2 {
              Anchor: (Height: 82);
              Style: $C.@DefaultColorPickerStyle;
            }
          }
        }

        // Presets Row 1
        Group {
          LayoutMode: Left;
          Anchor: (Height: 24, Bottom: 3);

          TextButton #GradPreset1 { Text: %nickname.ui.sunset; Anchor: (Width: 106, Height: 22); Style: @SunsetBtnStyle; }
          TextButton #GradPreset2 { Text: %nickname.ui.ocean; Anchor: (Width: 106, Height: 22, Left: 3); Style: @OceanBtnStyle; }
          TextButton #GradPreset3 { Text: %nickname.ui.fire; Anchor: (Width: 106, Height: 22, Left: 3); Style: @FireBtnStyle; }
          TextButton #GradPreset4 { Text: %nickname.ui.forest; Anchor: (Width: 106, Height: 22, Left: 3); Style: @ForestBtnStyle; }
        }

        // Presets Row 2
        Group {
          LayoutMode: Left;
          Anchor: (Height: 24);

          TextButton #GradPreset5 { Text: %nickname.ui.violet; Anchor: (Width: 106, Height: 22); Style: @VioletBtnStyle; }
          TextButton #GradPreset6 { Text: %nickname.ui.gold; Anchor: (Width: 106, Height: 22, Left: 3); Style: @GoldGradBtnStyle; }
          TextButton #GradPreset7 { Text: %nickname.ui.ice; Anchor: (Width: 106, Height: 22, Left: 3); Style: @IceBtnStyle; }
          TextButton #GradPreset8 { Text: %nickname.ui.rainbow; Anchor: (Width: 106, Height: 22, Left: 3); Style: @RainbowBtnStyle; }
        }
      }

      // --- Separator ---
      Group { Anchor: (Height: 1, Bottom: 6); Background: #93844c(0.3); }

      // ===== PREVIEW =====
      Label {
        Text: %nickname.ui.preview;
        Style: @SectionLabelStyle;
        Anchor: (Bottom: 3);
      }

      Group #PreviewSection {
        Anchor: (Height: 44, Bottom: 8);
        Background: #000000(0.4);

        Label #PreviewText {
          Text: "YourNickname";
          Style: @PreviewLabelStyle;
          Anchor: (Top: 0, Left: 0, Right: 0, Bottom: 0);
        }
      }

      // --- Separator ---
      Group { Anchor: (Height: 1, Bottom: 8); Background: #93844c(0.3); }

      // ===== BUTTONS =====
      Group #ButtonSection {
        LayoutMode: Left;
        Anchor: (Height: 48);

        $C.@TextButton #ApplyBtn {
          Text: %nickname.ui.apply;
          Anchor: (Width: 140, Height: 45);
        }

        $C.@TextButton #ResetBtn {
          Text: %nickname.ui.reset;
          Anchor: (Width: 140, Height: 45, Left: 6);
        }

        $C.@CancelTextButton #CancelBtn {
          Text: %nickname.ui.cancel;
          Anchor: (Width: 140, Height: 45, Left: 6);
        }
      }
    }
  }
}

$C.@BackButton #CloseBtn {}
