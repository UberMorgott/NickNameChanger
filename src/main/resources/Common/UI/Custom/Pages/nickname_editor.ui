$C = "../Common.ui";

@SectionLabelStyle = LabelStyle(
  FontSize: 14,
  TextColor: #93844c,
  RenderBold: true,
  RenderUppercase: true
);

@PreviewLabelStyle = LabelStyle(
  FontSize: 22,
  TextColor: #FFFFFF,
  HorizontalAlignment: Center,
  VerticalAlignment: Center
);

$C.@PageOverlay {

  $C.@DecoratedContainer {
    Anchor: (Width: 520, Height: 600);

    #Title {
      $C.@Title {
        @Text = "Nickname Editor";
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 10);

      // Nickname Input Section
      Group #InputSection {
        LayoutMode: Top;
        Anchor: (Bottom: 8);

        Label {
          Text: "Nickname";
          Style: @SectionLabelStyle;
          Anchor: (Bottom: 4);
        }

        $C.@TextField #NicknameInput {
          Anchor: (Height: 34);
          Style: (FontSize: 15, TextColor: #ffffff(0.9));
        }
      }

      // Separator
      Group {
        Anchor: (Height: 1, Bottom: 8);
        Background: #93844c(0.3);
      }

      // Text Styles Section
      Group #StylesSection {
        LayoutMode: Top;
        Anchor: (Bottom: 8);

        Label {
          Text: "Text Styles";
          Style: @SectionLabelStyle;
          Anchor: (Bottom: 4);
        }

        Group {
          LayoutMode: Left;

          $C.@CheckBoxWithLabel #BoldCheckbox {
            @Text = "Bold";
            Anchor: (Right: 25);
          }

          $C.@CheckBoxWithLabel #ItalicCheckbox {
            @Text = "Italic";
            Anchor: (Right: 25);
          }

          $C.@CheckBoxWithLabel #UnderlineCheckbox {
            @Text = "Underline";
          }
        }
      }

      // Separator
      Group {
        Anchor: (Height: 1, Bottom: 8);
        Background: #93844c(0.3);
      }

      // Tab Container
      Group #TabContainer {
        LayoutMode: Top;
        Anchor: (Bottom: 6);

        // Tab Bar
        Group #TabBar {
          LayoutMode: Left;
          Anchor: (Height: 36);
          Background: #1a2a3a(0.5);
          Padding: (Left: 4, Right: 4, Top: 3, Bottom: 3);

          $C.@TextButton #TabColor {
            Text: "COLOR";
            Anchor: (Width: 220);
            Padding: (Top: 5, Bottom: 5);
          }

          $C.@TextButton #TabGradient {
            Text: "GRADIENT";
            Anchor: (Width: 220, Left: 6);
            Padding: (Top: 5, Bottom: 5);
          }
        }
      }

      // Single Color Tab Content
      Group #SingleColorSection {
        LayoutMode: Top;
        Anchor: (Bottom: 6);
        Background: #1a2a3a(0.3);
        Padding: (Left: 10, Right: 10, Top: 8, Bottom: 8);

        // Color Picker
        ColorPicker #ColorPicker {
          Anchor: (Height: 100, Bottom: 6);
          Style: $C.@DefaultColorPickerStyle;
        }

        // Color Presets Row 1
        Group {
          LayoutMode: Left;
          Anchor: (Height: 28, Bottom: 3);

          $C.@TextButton #ColorRed {
            Text: "Red";
            Anchor: (Width: 108);
            Padding: (Top: 4, Bottom: 4);
            Background: #FF5555;
          }
          $C.@TextButton #ColorOrange {
            Text: "Orange";
            Anchor: (Width: 108, Left: 4);
            Padding: (Top: 4, Bottom: 4);
            Background: #FFAA00;
          }
          $C.@TextButton #ColorYellow {
            Text: "Yellow";
            Anchor: (Width: 108, Left: 4);
            Padding: (Top: 4, Bottom: 4);
            Background: #FFFF55;
          }
          $C.@TextButton #ColorGreen {
            Text: "Green";
            Anchor: (Width: 108, Left: 4);
            Padding: (Top: 4, Bottom: 4);
            Background: #55FF55;
          }
        }

        // Color Presets Row 2
        Group {
          LayoutMode: Left;
          Anchor: (Height: 28, Bottom: 3);

          $C.@TextButton #ColorAqua {
            Text: "Aqua";
            Anchor: (Width: 108);
            Padding: (Top: 4, Bottom: 4);
            Background: #55FFFF;
          }
          $C.@TextButton #ColorBlue {
            Text: "Blue";
            Anchor: (Width: 108, Left: 4);
            Padding: (Top: 4, Bottom: 4);
            Background: #5555FF;
          }
          $C.@TextButton #ColorPurple {
            Text: "Purple";
            Anchor: (Width: 108, Left: 4);
            Padding: (Top: 4, Bottom: 4);
            Background: #AA55FF;
          }
          $C.@TextButton #ColorPink {
            Text: "Pink";
            Anchor: (Width: 108, Left: 4);
            Padding: (Top: 4, Bottom: 4);
            Background: #FF55FF;
          }
        }

        // Color Presets Row 3
        Group {
          LayoutMode: Left;
          Anchor: (Height: 28);

          $C.@TextButton #ColorWhite {
            Text: "White";
            Anchor: (Width: 108);
            Padding: (Top: 4, Bottom: 4);
            Background: #FFFFFF;
          }
          $C.@TextButton #ColorGray {
            Text: "Gray";
            Anchor: (Width: 108, Left: 4);
            Padding: (Top: 4, Bottom: 4);
            Background: #AAAAAA;
          }
          $C.@TextButton #ColorGold {
            Text: "Gold";
            Anchor: (Width: 108, Left: 4);
            Padding: (Top: 4, Bottom: 4);
            Background: #FFD700;
          }
          $C.@TextButton #ColorNone {
            Text: "None";
            Anchor: (Width: 108, Left: 4);
            Padding: (Top: 4, Bottom: 4);
            Background: #333333;
          }
        }
      }

      // Gradient Tab Content
      Group #GradientSection {
        LayoutMode: Top;
        Anchor: (Bottom: 6);
        Visible: false;
        Background: #1a2a3a(0.3);
        Padding: (Left: 10, Right: 10, Top: 8, Bottom: 8);

        // Two ColorPickers side by side
        Group {
          LayoutMode: Left;
          Anchor: (Height: 120, Bottom: 6);

          // Start Color
          Group {
            LayoutMode: Top;
            FlexWeight: 1;

            Group {
              LayoutMode: Left;
              Anchor: (Height: 18, Bottom: 2);

              Label {
                Text: "Start";
                Style: (FontSize: 11, TextColor: #93844c, RenderUppercase: true);
              }

              Group #GradColor1Preview {
                Anchor: (Width: 16, Height: 16, Left: 6);
                Background: #FF5555;
              }
            }

            ColorPicker #GradColorPicker1 {
              Anchor: (Height: 100);
              Style: $C.@DefaultColorPickerStyle;
            }
          }

          // End Color
          Group {
            LayoutMode: Top;
            FlexWeight: 1;
            Anchor: (Left: 8);

            Group {
              LayoutMode: Left;
              Anchor: (Height: 18, Bottom: 2);

              Label {
                Text: "End";
                Style: (FontSize: 11, TextColor: #93844c, RenderUppercase: true);
              }

              Group #GradColor2Preview {
                Anchor: (Width: 16, Height: 16, Left: 6);
                Background: #5555FF;
              }
            }

            ColorPicker #GradColorPicker2 {
              Anchor: (Height: 100);
              Style: $C.@DefaultColorPickerStyle;
            }
          }
        }

        // Gradient Presets
        Group {
          LayoutMode: Left;
          Anchor: (Height: 26);

          $C.@TextButton #GradPreset1 {
            Text: "Sunset";
            FlexWeight: 1;
            Padding: (Top: 3, Bottom: 3);
          }
          $C.@TextButton #GradPreset2 {
            Text: "Ocean";
            FlexWeight: 1;
            Anchor: (Left: 3);
            Padding: (Top: 3, Bottom: 3);
          }
          $C.@TextButton #GradPreset3 {
            Text: "Fire";
            FlexWeight: 1;
            Anchor: (Left: 3);
            Padding: (Top: 3, Bottom: 3);
          }
          $C.@TextButton #GradPreset4 {
            Text: "Forest";
            FlexWeight: 1;
            Anchor: (Left: 3);
            Padding: (Top: 3, Bottom: 3);
          }
        }
      }

      // Separator
      Group {
        Anchor: (Height: 1, Bottom: 6);
        Background: #93844c(0.3);
      }

      // Preview Section
      Group #PreviewSection {
        LayoutMode: Top;
        Anchor: (Bottom: 8);
        Background: #000000(0.3);
        Padding: (Left: 15, Right: 15, Top: 6, Bottom: 6);

        Group {
          LayoutMode: Left;
          Anchor: (Bottom: 2);

          Label {
            Text: "Preview";
            Style: (FontSize: 11, TextColor: #93844c, RenderUppercase: true);
          }

          Label #PreviewStyles {
            Text: "";
            Style: (FontSize: 10, TextColor: #666666);
            Anchor: (Left: 10);
          }
        }

        Label #PreviewText {
          Text: "YourNickname";
          Style: @PreviewLabelStyle;
          Anchor: (Height: 30);
        }
      }

      // Spacer
      Label { FlexWeight: 1; }

      // Action Buttons - centered
      Group #ButtonSection {
        LayoutMode: Left;
        Anchor: (Bottom: 6, Height: 40);
        Padding: (Left: 80, Right: 80);

        $C.@TextButton #ApplyBtn {
          Text: "Apply";
          Anchor: (Width: 100);
          Padding: (Top: 8, Bottom: 8);
        }

        $C.@TextButton #ResetBtn {
          Text: "Reset";
          Anchor: (Width: 100, Left: 20);
          Padding: (Top: 8, Bottom: 8);
        }

        $C.@CancelTextButton #CancelBtn {
          Text: "Cancel";
          Anchor: (Width: 100, Left: 20);
          Padding: (Top: 8, Bottom: 8);
        }
      }
    }
  }
}

$C.@BackButton #CloseBtn {}
